{
  "name": "shopper-keep",
  "description": "Full Stack eCommerce MERN App",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "// bootstrap scripts": "",
    "bootstrap": "yarn install && yarn build:packages",
    "// build scripts": "",
    "build": "turbo run build",
    "build:client": "turbo run build --filter=./apps/client",
    "build:ui": "turbo run build --filter=./packages/ui",
    "build:packages": "turbo run build --filter=./packages/*",
    "// start scripts": "",
    "dev": "turbo run dev --parallel",
    "dev:client": "turbo run dev --filter=./apps/client",
    "// format scripts": "",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "// lint scripts": "",
    "lint": "turbo run lint",
    "lint:client": "turbo run lint --filter=./apps/client",
    "lint:ui": "turbo run lint --filter=./packages/ui",
    "lint:packages": "turbo run lint --filter=./packages/*",
    "// clean scripts": "",
    "clean:root": "rm -rf ./node_modules",
    "clean:workspaces": "turbo run clean --force",
    "clean:packages": "turbo run clean --filter=./packages/* --force",
    "clean:all": "yarn clean:workspaces && yarn clean:root",
    "// other scripts": "",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "lint-staged": {
    "apps/**/src/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/src/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
